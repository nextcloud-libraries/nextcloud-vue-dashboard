	"dependencies": {
		"@nextcloud/vue": "^3.1.1",
		"core-js": "^3.6.4",
		"vue": "^3.2.36"
	},
	"engines": {
		"node": "^14.0.0",
		"npm": "^7.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.8.3",
		"@babel/plugin-transform-arrow-functions": "^7.8.3",
