	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"vue"
		],
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/src/$1"
		},
		"transform": {
			"^.+\\.js$": "<rootDir>/node_modules/babel-jest",
			"^.+\\.vue$": "<rootDir>/node_modules/@vue/vue3-jest"
		},
		"snapshotSerializers": [
			"<rootDir>/node_modules/jest-serializer-vue"
		]
	},
	"browserslist": [
		"extends @nextcloud/browserslist-config"
	]
