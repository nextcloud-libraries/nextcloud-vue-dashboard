{
	"name": "@nextcloud/vue-dashboard",
	"version": "2.0.1",
	"description": "Vue component for dashboard",
	"keywords": [
		"vuejs",
		"components"
	],
	"repository": "https://github.com/nextcloud/nextcloud-vue-dashboard",
	"homepage": "https://github.com/nextcloud/nextcloud-vue-dashboard",
	"bugs": "https://github.com/nextcloud/nextcloud-vue-dashboard/issues",
	"author": "Julius HÃ¤rtl <jus@bitgrid.net>",
	"license": "AGPL-3.0",
	"scripts": {
		"build": "NODE_ENV=production rollup -c",
		"watch": "NODE_ENV=development rollup -c --watch",
		"lint": "eslint --ext .js,.vue src",
		"lint:fix": "eslint --ext .js,.vue src --fix",
		"stylelint": "stylelint src",
		"stylelint:fix": "stylelint src --fix",
		"test": "jest --passWithNoTests",
		"test:coverage": "jest --coverage",
		"docs:dev": "vuepress dev docs",
		"docs:build": "vuepress build docs"
	},
	"main": "dist/vue-dashboard.js",
